<div class="jumbotron" style = "text-align: center;">
  <div class="container">
    <h1>Bob's Burgers</h1>
  </div>
</div>

<div class="col-lg-4"> 
  <h2>Burgers that need to be eaten!</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class="btn btn-primary">Eat it!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="col-lg-4">
  <h2>Burgers that have been eaten</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">
  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="hidden" name="devoured" value="0">
    <input type="text" id="newBurger" name="burger_name">
    <br />
    <button type="submit">Add Burger</button>
  </div>
  
</form>
